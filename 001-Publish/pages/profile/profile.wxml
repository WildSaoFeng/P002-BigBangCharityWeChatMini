      <text style='font-weight:bold;font-size:120%'>34件</text>
    </view>
    <view style="display:flex;flex-direction:column;align-items:center;margin:0px 40px 15px 25px">
      <text style='font-weight:lighter;font-size:80%'>物资金额</text>
      <text style='font-weight:bold;font-size:120%'>500元</text>
    </view>
  </view>
  <view class="line2-css"></view>
  <view style="margin:20px">
    <view>
      <text style='font-weight:bold'>项目记录</text>
      <text bindtap="bindViewTap2" style="position:relative;float:right;font-weight:lighter;font-size:73%;margin:2px 0px 0px 0px">查看全部></text>
      <!-- <button bindtap="bindViewTap2" style="position:relative;float:right;font-size:73%">全部</button> -->
    </view>
    <view class="line-css"></view>
    <view>
      <text style='font-weight:lighter;font-size:85% ;margin:20px 0px'>2017/3/14</text>
