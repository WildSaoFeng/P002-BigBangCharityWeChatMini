      <text style="position:relative;float:right;font-size:85%;color:#666;margin:0px 5px">书送未来</text>
    </view>
  </view>
    <view class="line2-css"></view>
  <view style="margin:20px">
    <view>
      <text style='font-weight:bold'>物品流向</text>
      <text bindtap="bindViewTap1" style="position:relative;float:right;font-weight:lighter;font-size:73%;margin:2px 0px 0px 0px">查看全部></text>
    </view>
    <view class="line-css"></view>
    <view>
      <text style='font-weight:lighter;font-size:85% ;margin:20px 0px'>字典</text>
      <text style="position:relative;float:right;font-size:85%;color:#666;margin:0px 5px">已送达</text>
    </view>
    <view>
      <text style='font-weight:lighter;font-size:85% ;margin:20px 0px'>识字卡片</text>
